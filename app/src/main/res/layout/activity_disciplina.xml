<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alanvictorg.seminario.controls.DisciplinaActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtNomeProf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNomeDisc"
        android:layout_below="@+id/txtNomeDisc"
        android:layout_marginStart="8dp"
        android:layout_marginTop="340dp"
        android:text="@string/professor"
        android:textSize="18sp"
        card_view:layout_constraintLeft_toRightOf="@+id/imageView3"
        card_view:layout_constraintTop_toTopOf="parent"
       />

    <TextView
        android:id="@+id/txtAnoDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtNomeDisc"
        android:layout_below="@+id/txtNomeDisc"
        android:layout_marginEnd="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="337dp"
        android:text="@string/ano"
        android:textSize="20sp"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
     />

    <TextView
        android:id="@+id/txtNomeDisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="297dp"
        android:layout_toEndOf="@+id/imageView3"
        android:fontFamily="casual"
        android:paddingBottom="0dp"
        android:text="@string/disciplina"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        card_view:layout_constraintLeft_toRightOf="@+id/imageView3"
        card_view:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="58dp"
        android:layout_height="64dp"
        android:layout_alignBottom="@+id/txtNomeProf"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="297dp"
        android:contentDescription="@string/img_prof"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@drawable/ic_professor"
       />

    <View
        android:id="@+id/Divisor1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="281dp"
        android:background="#A8A8A8"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="377dp"
        android:background="#A8A8A8"
        card_view:layout_constraintHorizontal_bias="0.0"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintRight_toRightOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNotas"
        android:layout_width="94dp"
        android:layout_height="42dp"
        android:layout_marginEnd="165dp"
        android:layout_marginTop="23dp"
        android:text="@string/notas"
        android:gravity="center"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="30sp"
        card_view:layout_constraintTop_toBottomOf="@+id/view"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="159dp"
        card_view:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/txtN1"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="5dp"
        android:text="@string/n1"
        android:textAlignment="center"
        android:textSize="20sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView1" />

    <TextView
        android:id="@+id/txtN2"
        android:layout_width="41dp"
        android:layout_height="35dp"
        android:layout_marginStart="145dp"
        android:layout_marginTop="6dp"
        android:text="@string/n2"
        android:textAlignment="center"
        android:textSize="20sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtN3"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="6dp"
        android:text="@string/n3"
        android:textAlignment="center"
        android:textSize="20sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtMedia"
        android:layout_width="48dp"
        android:layout_height="35dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="6dp"
        android:text="@string/m1"
        android:textAlignment="center"
        android:textSize="20sp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textView4" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="406dp"
        android:layout_height="202dp"
        card_view:srcCompat="@drawable/splash_logo"
        tools:ignore="ContentDescription"
        card_view:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="64dp"
        android:layout_marginStart="2dp"
        card_view:layout_constraintLeft_toLeftOf="parent" />

    <ImageView
        android:id="@+id/icon_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        card_view:layout_constraintLeft_toLeftOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:srcCompat="@mipmap/ic_voltar"
        tools:ignore="ContentDescription"
        android:onClick="irproinicio"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:text="@string/vp1"
        android:textSize="25sp"
        card_view:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginTop="73dp"
        android:layout_marginStart="62dp"
        card_view:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vp2"
        android:textSize="25sp"
        android:layout_marginTop="72dp"
        card_view:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="142dp"
        card_view:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vp3"
        android:textSize="25sp"
        android:layout_marginTop="73dp"
        card_view:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="216dp"
        card_view:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/media"
        android:textSize="25sp"
        android:layout_marginTop="73dp"
        card_view:layout_constraintTop_toBottomOf="@+id/view"
        android:layout_marginStart="301dp"
        card_view:layout_constraintLeft_toLeftOf="parent" />

</android.support.constraint.ConstraintLayout>
